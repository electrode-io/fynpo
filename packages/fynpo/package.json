{
  "name": "fynpo",
  "version": "0.4.7",
  "description": "A JavaScript monorepo manager - the benefits of a monorepo without the usual downsides",
  "main": "index.js",
  "homepage": "https://www.electrode.io/fynpo/",
  "scripts": {
    "build": "tsc",
    "docs": "xrun xarc/docs",
    "test": "xrun xarc/test-only",
    "lint": "xrun xarc/lint",
    "coverage": "xrun xarc/test-cov",
    "ci:check": "xrun xarc/check",
    "prepublishOnly": "xrun --serial [build, xarc/check] && publish-util-prepublishonly",
    "postpack": "publish-util-postpack"
  },
  "keywords": [
    "lerna",
    "mono",
    "repo",
    "mono-repo",
    "workspace",
    "monorepo",
    "javascript"
  ],
  "files": [
    "dist",
    "templates"
  ],
  "author": "Walmart GTP.js Team and Contributors",
  "contributors": [
    "Joel Chen",
    "Divya Vannilaparambath"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/electrode-io/fynpo.git",
    "directory": "packages/fynpo"
  },
  "bin": {
    "fynpo": "dist/fynpo-cli.js"
  },
  "dependencies": {
    "@commitlint/execute-rule": "^12.1.1",
    "@commitlint/format": "^12.1.1",
    "@commitlint/lint": "^12.1.1",
    "@commitlint/read": "^12.1.1",
    "@commitlint/resolve-extends": "^12.1.1",
    "@fynpo/base": "^0.1.0",
    "@xarc/fastify-server": "^3.3.0",
    "bluebird": "^3.5.1",
    "boxen": "^5.0.1",
    "chalk": "^4.1.1",
    "chalker": "^1.2.0",
    "cosmiconfig": "^7.0.0",
    "execa": "^5.0.0",
    "filter-scan-dir": "^1.2.0",
    "fs-extra": "^9.1.0",
    "fyn": "^0.4.38",
    "get-stdin": "^8.0.0",
    "item-queue": "^1.0.4",
    "lodash": "^4.17.20",
    "minimatch": "^3.0.4",
    "nix-clap": "^1.3.12",
    "optional-require": "^1.0.3",
    "p-queue": "^6.0.0",
    "prettier": "^2.3.0",
    "resolve-from": "^5.0.0",
    "resolve-global": "^1.0.0",
    "semver": "^7.3.4",
    "shcmd": "^0.8.4",
    "slash": "^3.0.0",
    "strong-log-transformer": "^2.1.0",
    "tslib": "^2.1.0",
    "visual-exec": "^0.1.8",
    "visual-logger": "^1.1.3",
    "xsh": "^0.4.5"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "@xarc/module-dev": "^4.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.16.0",
    "eslint-config-walmart": "^2.2.1",
    "eslint-plugin-filenames": "^1.1.0",
    "eslint-plugin-jsdoc": "^30.7.9",
    "eslint-plugin-tsdoc": "^0.2.11",
    "jest": "^26.6.3",
    "publish-util": "^1.1.5",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.13",
    "typescript": "^4.1.3"
  },
  "nyc": {
    "all": true,
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "exclude": [
      "coverage",
      "*clap.js",
      "gulpfile.js",
      "dist",
      "test"
    ],
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "cache": true
  },
  "prettier": {
    "printWidth": 100
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    },
    "collectCoverageFrom": [
      "lib/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 30,
        "functions": 30,
        "lines": 30,
        "statements": 30
      }
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "@xarc/module-dev": {
    "features": [
      "eslint",
      "eslintTS",
      "jest",
      "jestTS",
      "prettier",
      "typedoc",
      "typescript"
    ]
  },
  "fyn": {
    "dependencies": {
      "@fynpo/base": "../fynpo-base"
    }
  }
}
