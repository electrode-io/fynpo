{
  "name": "fynpo",
  "version": "1.1.12",
  "description": "A node.js monorepo manager, that solves some common issues.",
  "main": "dist/index.js",
  "homepage": "https://www.electrode.io/fynpo/",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "docs": "xrun xarc/docs",
    "test": "xrun xarc/test-only",
    "lint": "xrun xarc/lint",
    "coverage": "xrun xarc/test-cov",
    "ci:check": "xrun xarc/check",
    "prepublishOnly": "xrun --serial [build, xarc/check] && publish-util-prepublishonly",
    "postpack": "publish-util-postpack"
  },
  "keywords": [
    "lerna",
    "mono",
    "repo",
    "mono-repo",
    "workspace",
    "monorepo",
    "javascript"
  ],
  "files": [
    "dist",
    "templates"
  ],
  "author": "Walmart GTP.js Team and Contributors",
  "contributors": [
    "Joel Chen",
    "Divya Vannilaparambath"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/electrode-io/fynpo.git",
    "directory": "packages/fynpo"
  },
  "bin": {
    "fynpo": "dist/index.js"
  },
  "dependencies": {
    "@commitlint/execute-rule": "^12.1.1",
    "@commitlint/format": "^12.1.1",
    "@commitlint/lint": "^12.1.1",
    "@commitlint/read": "^12.1.1",
    "@commitlint/resolve-extends": "^12.1.1",
    "@fynpo/base": "^1.1.3",
    "bluebird": "^3.7.2",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "chalker": "^1.2.0",
    "cosmiconfig": "^7.0.0",
    "execa": "^5.0.0",
    "filter-scan-dir": "^1.2.0",
    "fs-extra": "^9.1.0",
    "fyn": "^1.1.10",
    "get-stdin": "^8.0.0",
    "item-queue": "^1.1.2",
    "lodash": "^4.17.21",
    "minimatch": "^3.0.4",
    "nix-clap": "^1.3.13",
    "optional-require": "^1.1.8",
    "prettier": "^2.4.1",
    "resolve-from": "^5.0.0",
    "resolve-global": "^1.0.0",
    "semver": "^7.3.5",
    "shcmd": "^0.8.4",
    "slash": "^3.0.0",
    "strong-log-transformer": "^2.1.0",
    "tslib": "^2.3.1",
    "visual-exec": "^0.1.8",
    "visual-logger": "^1.1.3",
    "xsh": "^0.4.5"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.6",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "@xarc/module-dev": "^4.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.1.0",
    "eslint-config-walmart": "^2.2.1",
    "eslint-plugin-filenames": "^1.1.0",
    "eslint-plugin-jsdoc": "^30.7.9",
    "eslint-plugin-tsdoc": "^0.2.11",
    "jest": "^27.3.1",
    "publish-util": "^1.1.5",
    "source-map-support": "^0.5.19",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.7",
    "typescript": "^4.4.4"
  },
  "nyc": {
    "all": true,
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "exclude": [
      "coverage",
      "*clap.js",
      "gulpfile.js",
      "dist",
      "test"
    ],
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "cache": true
  },
  "prettier": {
    "printWidth": 100
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "@xarc/module-dev": {
    "features": [
      "eslint",
      "eslintTS",
      "jest",
      "jestTS",
      "prettier",
      "typedoc",
      "typescript"
    ]
  },
  "fyn": {
    "dependencies": {
      "@fynpo/base": "../fynpo-base"
    }
  }
}
