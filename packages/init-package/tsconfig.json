{
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "es2018"
    ],
    "module": "CommonJS",
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "ES2018",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "types": [
      "node",
      "jest"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true
  },
  "include": [
    "src"
  ]
}
