  "license": "Apache-2.0",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/jest": "^26.0.20",
    "@types/minimatch": "^3.0.5",
    "@types/node": "^14.14.16",
    "@xarc/module-dev": "^4.0.0",
    "npm-packlist": "jchip/npm-packlist",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "publish-util": "^2.0.0",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.4.4",
